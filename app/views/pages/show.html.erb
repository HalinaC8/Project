<h1>SHOE THERAPY</h1>

<nav>
<%= button_to link_to "BACK TO PREVIOUS PAGE", :back %>
<%= button_to link_to "HOME PAGE", :root %>
<nav>

<br>

<article>
    <p> BRAND: <%= @page.brand %></p>
    <p> SIZE: <%= @page.size %></p>
    <p> STATUS: <%= @page.status %></p>
    <p> CONDITION: <%= @page.condition %></p>
    <p> ORIGINAL BOX: <%= @page.box %></p>
    <p><%= image_tag @page.image, :style => "max-height:300px" %></p>
    <p> PURCHASE PRICE: <%= @page.price1 %></p>
    <p> SOLD FOR: <%= @page.price2 %></p>
</article>

<br>

<nav>
    <a><%= button_to link_to "EDIT", edit_page_path(@page) %></a>
    <a><%= button_to link_to "DELETE", page_path(@page), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                        } %></a>
</nav>